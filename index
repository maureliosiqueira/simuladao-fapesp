  <script>
    // Countdown Timer
    function updateCountdown() {
      const launchDate = new Date('2026-03-01T00:00:00').getTime();
      const now = new Date().getTime();
      const distance = launchDate - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById('dias').textContent = String(days).padStart(2, '0');
      document.getElementById('horas').textContent = String(hours).padStart(2, '0');
      document.getElementById('minutos').textContent = String(minutes).padStart(2, '0');
      document.getElementById('segundos').textContent = String(seconds).padStart(2, '0');
    }

    setInterval(updateCountdown, 1000);
    updateCountdown();

    // Formul√°rio de Captura de E-mail
    document.getElementById('capturaEmail').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const email = document.getElementById('email').value;
      const button = e.target.querySelector('button');
      const originalText = button.textContent;
      
      // Feedback visual
      button.textContent = 'Enviando...';
      button.disabled = true;
      
      try {
        // TODO: Integrar com Google Sheets API ou servi√ßo de e-mail
        // Por enquanto, simulamos o sucesso
        
        // Exemplo de integra√ß√£o com Google Sheets:
        /*
        const sheetURL = 'SUA_URL_DO_GOOGLE_SHEETS_API';
        await fetch(sheetURL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email: email, data: new Date().toISOString() })
        });
        */
        
        // Simula√ß√£o de sucesso
        await new Promise(resolve => setTimeout(resolve, 1000));
        
        alert('‚úÖ E-mail cadastrado com sucesso!\n\nVoc√™ receber√°:\nüîî Aviso de lan√ßamento\nüéÅ Cupom de 30% OFF\nüìö Mapa Mental do Edital\n\nBoa sorte na prepara√ß√£o! üöÄ');
        
        // Reset form
        e.target.reset();
        
      } catch (error) {
        console.error('Erro ao cadastrar e-mail:', error);
        alert('‚ö†Ô∏è Ocorreu um erro ao cadastrar. Tente novamente em alguns minutos.');
      } finally {
        button.textContent = originalText;
        button.disabled = false;
      }
    });

    // Anima√ß√£o suave ao carregar
    window.addEventListener('load', () => {
      document.body.style.opacity = '1';
    });
